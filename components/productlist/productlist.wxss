.search_item{
				display:grid;
				grid-template-columns: 38.2% 61.8%;
				grid-template-rows: 100rpx 100rpx 100rpx;
			}
			.search_item .img{
				padding: 10rpx 10rpx;
				grid-row:  1/ 4;
				display: flex;
				justify-content: center;
				align-items: center
			}
			.search_item .img .title_pp{
				 max-width: 100%;
				 max-height: 100%;
			}
			.search_item .title{
				line-height:50rpx;
				font-size:28rpx;
				padding:0rpx 10rpx;
				display: -webkit-box;
				-webkit-box-orient: vertical;
				-webkit-line-clamp: 2; 
				overflow: hidden;
				white-space:pre-line;
				text-overflow:ellipsis;
			}
			.search_item .title .title_img{
				width:40rpx;
        height: 40rpx;
        margin-right: 5rpx;
				vertical-align:middle;
			}
      .coupon{
        display: flex;
        align-items:center
      }
			.coupon .coupon_price{
        margin-left:10rpx;
				/* margin-left:10rpx;
				margin-top:30rpx; */
				width: 75rpx;
				height: 39rpx;
				background:rgb(246, 90, 16);
				line-height:39rpx;
				color: #fff;
				text-align: center;
			}
			.coupon .coupon_middle{
				border-right:3rpx dashed #fff;
        height: 39rpx;
        margin-left: -12rpx;
			}
			.coupon .coupon_right{
				width: 10rpx;
				height: 10rpx;
				border-radius: 50%;
				background: #fff;
        margin-left: 5rpx;
			}
			.price{
				display:grid;
				grid-template-columns:repeat(2, 50%) ;
				grid-template-rows:repeat(2, 50%);
				grid-template-areas: 'a b'
				                     'c d';
			}
			.price .number{
				grid-area: a;
				display:flex;
				align-items:flex-end;
				bottom:0rpx; left:0rpx; 
			}
			.price .number .discount{
				color:#e22319;
				font-size:38rpx;
			}
			.price .number .original{
				color:#999999;
				text-decoration:line-through;
				padding-left:5rpx;
				padding-bottom:4rpx;
        font-size:25rpx;
			}
			.price .sales{
				color:#999999;
				font-size:15rpx;
				grid-area: c;
				display:flex;
				flex-direction:column;
				line-height:25rpx;
			}